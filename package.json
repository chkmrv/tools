{
  "name": "@chantelle/tools",
  "private": true,
  "description": "Common tools for Groupe Chantelle",
  "scripts": {
    "reinstall": "yarn run purge && yarn",
    "bootstrap": "lerna bootstrap",
    "start": "yarn bootstrap && lerna run start --stream --parallel",
    "test": "yarn bootstrap && lerna run test --parallel --stream",
    "build": "yarn bootstrap && lerna run build --stream --parallel",
    "lint": "yarn bootstrap && lerna run lint --stream --parallel",
    "exec": "yarn bootstrap && lerna exec --stream --parallel",
    "lint-watch": "yarn bootstrap && lerna run lint --stream --parallel -- --watch",
    "purge": "lerna clean --yes && rm -rf ./node_modules && rm -rf ./package-lock.json && rm -rf ./yarn.lock && rm -rf ./**/**/package-lock.json && rm -rf ./**/**/yarn.lock",
    "clean": "lerna clean --yes",
    "publish": "yarn bootstrap && lerna publish",
    "precommit": "yarn bootstrap && yarn run lint && yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:GroupeChantelle/tools.git"
  },
  "keywords": [
    "build",
    "webpack",
    "devops",
    "tools",
    "ci",
    "integration",
    "bundle",
    "gulp"
  ],
  "license": "MIT",
  "dependencies": {
    "lerna": "^2.5.1"
  },
  "devDependencies": {
    "husky": "^0.14.3"
  },
  "workspaces": [
    "@chantelle/*"
  ]
}
