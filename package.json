{
  "name": "@chantelle/tools",
  "private": true,
  "description": "Common tools for Groupe Chantelle",
  "scripts": {
    "postinstall": "yon run bootstrap",
    "reinstall": "yon run purge && $(yarn || npm install)",
    "bootstrap": "lerna bootstrap",
    "start": "lerna run start --stream --parallel",
    "test": "lerna run test --parallel --stream",
    "build": "lerna run build --stream --parallel",
    "lint": "lerna run lint --stream --parallel",
    "exec": "lerna exec --stream --parallel",
    "lint-watch": "lerna run lint --stream --parallel -- --watch",
    "purge": "lerna clean --yes && rm -rf ./node_modules && rm -rf ./package-lock.json && rm -rf ./**/**/package-lock.json",
    "clean": "lerna clean --yes",
    "publish": "lerna publish",
    "precommit": "yon run lint && yon test"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:GroupeChantelle/tools.git"
  },
  "keywords": [
    "build",
    "webpack",
    "devops",
    "tools",
    "ci",
    "integration",
    "bundle",
    "gulp"
  ],
  "license": "MIT",
  "dependencies": {
    "lerna": "^2.9.0",
    "npm-run-all": "^4.1.2",
    "yarn-or-npm": "^2.0.4"
  },
  "devDependencies": {
    "husky": "^0.14.3"
  }
}
