{
  "name": "@chantelle/tools",
  "private": true,
  "description": "Common tools for Groupe Chantelle",
  "scripts": {
    "postinstall": "yarn bootstrap",
    "bootstrap": "lerna bootstrap",
    "start": "lerna run start --stream --parallel",
    "test": "lerna run test --parallel --stream",
    "build": "lerna run build --stream --parallel",
    "lint": "lerna run lint --stream --parallel",
    "exec": "lerna exec --stream --parallel",
    "lint-watch": "lerna run lint --stream --parallel -- --watch",
    "purge-lock-files": "rm -rf ./package-lock.json && rm -rf ./yarn.lock && rm -rf ./**/**/package-lock.json && rm -rf ./**/**/yarn.lock",
    "purge-modules": "lerna clean --yes && rm -rf ./node_modules & rm -rf ./tools & wait",
    "purge": "yarn purge-modules & yarn purge-lock-files & wait",
    "reinstall": "yarn purge && yarn",
    "clean": "lerna clean --yes",
    "publish-all": "lerna publish",
    "postmerge": "yarn && yarn bootstrap",
    "precommit": "yarn lint",
    "prepublishOnly": "yarn test",
    "prepush": "yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:GroupeChantelle/tools.git"
  },
  "keywords": [
    "build",
    "webpack",
    "devops",
    "tools",
    "ci",
    "integration",
    "bundle",
    "gulp"
  ],
  "license": "MIT",
  "dependencies": {
    "lerna": "^2.9.0",
    "npm-run-all": "^4.1.2"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "if-env": "^1.0.4"
  }
}
